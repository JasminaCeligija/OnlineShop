<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <input type="text" placeholder="Title" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <input type="text" placeholder="Image URL" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <input type="number" placeholder="Price" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                    <input type="number" placeholder="Quantity" name="quantity" id="quantity" step="0.01" value="<% if (editing) { %><%= product.quantity %><% } %>">
                </div>
                <div class="form-control">
                        <input type="number" placeholder="Critical Quantity" name="criticalQuantity" id="criticalQuantity" step="0.01" value="<% if (editing) { %><%= product.criticalQuantity %><% } %>">
                    </div>
            <div class="form-control">
                <textarea name="description" placeholder="Description" id="description" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
